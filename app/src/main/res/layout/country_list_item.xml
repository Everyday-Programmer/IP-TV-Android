<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3sp"
    style="@style/Widget.Material3.CardView.Filled"
    app:cardCornerRadius="15sp"
    app:cardElevation="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80sp"
        android:padding="10sp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_centerVertical="true"
            android:id="@+id/card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_item_flag"
                android:textStyle="bold"
                android:textSize="28sp"
                android:gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card"
            android:id="@+id/list_item_country_name"
            android:layout_alignTop="@id/card"
            android:layout_marginStart="10sp"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_country_name"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@id/card"
            android:id="@+id/list_item_code"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_code"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@id/card"
            android:id="@+id/list_item_languages"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>